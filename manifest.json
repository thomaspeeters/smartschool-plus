{
  "name": "Smartschool Plus",
  "description": "Add extra features to Smartschool",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://*.smartschool.be/*"
      ],
      "js": [
        "js/jquery-3.7.0.min.js",
        "js/fontawesome-all.min.js",
        "js/zip-full.min.js",
        "js/content.js"
      ],
      "css": [
        "css/style.css"
      ]
    }
  ],
  "background": {
    "service_worker": "js/service-worker.js"
  },
  "host_permissions": [
    "https://*.smartschool.be/*"
  ],
  "icons": {
    "16": "icon/icon-16.png",
    "32": "icon/icon-32.png",
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  },
  "permissions": [
    "offscreen",
    "tabs",
    "activeTab",
    "scripting"
  ]
}